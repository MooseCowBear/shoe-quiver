<li id='<%="#{dom_id(shoe)}_container"%>' class="<%= shoe_wear_category(shoe) == "mustard" ? "text-eggplant" : "text-neutral-50" %> p-2 rounded-md <%= "bg-#{shoe_wear_category(shoe)}" %>">
  <%= turbo_frame_tag dom_id(shoe), class: "grid grid-cols-[1fr_auto_auto] items-center gap-x-2" do %>
    <h3 class="flex items-center gap-2 uppercase">
      <%= shoe.brand %>
      <span class="lowercase">
        <%= shoe.model %>
      </span>
      <span class="text-sm rounded-xl px-2 border-2 <%= shoe_wear_category(shoe) == "mustard" ? "border-eggplant" : "border-neutral-50" %>">
        <%= category_identifier(shoe) %>
      </span>
    </h3>
    <p><%= shoe.mileage.to_f %></p>
    <button class="h-7 w-7">
      <svg class="<%= shoe_wear_category(shoe) == "mustard" ? "fill-eggplant" : "fill-neutral-50" %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path  fill="" d="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z" />
      </svg>
    </button>
    <p class="leading-none"><%= shoe.color %></p>
  <% end %>
</li>