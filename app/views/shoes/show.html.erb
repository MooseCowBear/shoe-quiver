<div class="w-[clamp(300px,_80vw,_1000px)] flex flex-col gap-2">
  <h1 class="text-3xl font-semibold uppercase tracking-wider">Shoe Details</h1>
  
  <ul class="flex flex-col gap-3">
    <%= render @shoe, show: true %>
  </ul>
  <%= button_to "Delete", 
    shoe_path(@shoe), 
    data: { turbo_confirm: 'Are you sure?'}, 
    class: "uppercase text-sm tracking-wider float-right text-pink-500", 
    method: :delete %>

  <ul id="runs" class="flex flex-col gap-3 px-3" data-controller="sort">
    <%= render @runs %>
  </ul>

  <div class="px-3">
    <% if @pagy.prev %>
      <%= link_to "< Previous", shoe_path(page: @pagy.prev), class: "float-left" %>
    <% end %>
    <% if @pagy.next %>
      <%= link_to "Next >", shoe_path(page: @pagy.next), class: "float-right" %>
    <% end %>
  </div>
</div>