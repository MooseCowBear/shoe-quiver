<div class="w-[clamp(300px,_80vw,_1000px)] flex flex-col gap-2 border"> 
  
  <div class="flex justify-center items-baseline gap-3">
    <h1 class="text-3xl font-semibold uppercase tracking-wider">Archive</h1>
  </div>

  <div class="rounded bg-mint/50 bg-neutral-100"> 
  </div>

  <ul class="grid grid-cols-4 justify-items-center items-center">
    <li>
      <%= link_to "All",
        archive_index_path,
        class: "inline-block py-2 px-4 text-sm font-medium text-center text-gray-500 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300" 
      %>
    </li>
    <li>
      <%= link_to "Daily Trainers",
        archive_index_path(category: 0),
        class: "inline-block py-2 px-4 text-sm font-medium text-center text-gray-500 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300" 
      %>
    </li>
    <li>
      <%= link_to "Speed",
        archive_index_path(category: 1),
        class: "inline-block py-2 px-4 text-sm font-medium text-center text-gray-500 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300" 
      %>
    </li>
    <li>
      <%= link_to "Race",
        archive_index_path(category: 2),
        class: "inline-block py-2 px-4 text-sm font-medium text-center text-gray-500 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300" 
      %>
    </li>
  </ul>

  <ul id="retired_shoes" class="flex flex-col gap-3">
    <%= render partial: "archive/shoe", collection: @shoes, as: :shoe %>
  </ul>

  <div class="flex justify-between">
    <% if @pagy.prev %>
      <%= link_to "< Previous", archive_index_path(page: @pagy.prev), class: "" %>
    <% end %>
    <% if @pagy.next %>
      <%= link_to "Next >", archive_index_path(page: @pagy.next), class: "" %>
    <% end %>
  </div>
</div>
