<li id='<%="#{dom_id(shoe)}_container"%>' class="">
  <%= turbo_frame_tag dom_id(shoe), 
    class: "p-2 rounded-md grid grid-cols-1 md:grid-cols-[1fr_auto] items-center gap-x-2 #{shoe_card_classes(shoe)}" do %>
    <h3 class="flex items-center gap-2 uppercase row-start-1">
      <%= shoe.brand %>
      <span class="lowercase">
        <%= shoe.model %>
      </span>
      <span class='text-sm rounded-xl px-2 border-2 <%= border_classes(shoe) %>'>
        <%= category_identifier(shoe) %>
      </span>
    </h3>
    <div class="flex gap-2 items-center row-start-3 md:row-start-1 md:justify-self-end">
      <p><%= distance_display(shoe.mileage, current_user.unit) %></p>
      <%= button_to shoe_path(shoe), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } do %>
        <svg class='h-5 w-5 translate-y-[3px] <%= svg_classes(shoe) %>' xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
          <path fill="" d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
        </svg>
      <% end %> 
    </div>
    <p class="leading-none row-start-2"><%= shoe.color %></p>

    <%= button_to "Unretire", archive_path(shoe), data: {turbo_frame: "_top"}, method: :delete, class: "float-right" %>
  <% end %>
</li>