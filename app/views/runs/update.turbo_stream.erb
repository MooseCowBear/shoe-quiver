<%= turbo_stream.replace "#{dom_id(@run)}_container" do %>
  <%= render partial: "runs/run", locals: { run: @run } %>
<% end %>
<%= turbo_stream.replace "#{dom_id(@run.shoe)}_container" do %>
  <%= render partial: "shoes/shoe", locals: { shoe: @run.shoe, show: true } %>
<% end %>

<%= turbo_stream.update "flash", partial: "layouts/flash" %>