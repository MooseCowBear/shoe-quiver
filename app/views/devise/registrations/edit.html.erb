<h2 class="uppercase tracking-wider font-semibold">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "flex flex-col gap-3 p-5 bg-neutral-50 rounded-md border-2 shadow-sm" }) do |f| %>
  <div class="field">
    <div class="flex gap-2 flex-wrap">
      <%= f.label :email, class: "lowercase" %>
      <% f.object.errors.full_messages_for(:email).each do |msg| %>
        <span class="text-pink-500"><%= msg %></span>
      <% end %>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded p-2 bg-neutral-50 border-eggplant w-full text-eggplant" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <div class="flex gap-2 flex-wrap">
      <%= f.label :password, class: "lowercase" %> 
      <% f.object.errors.full_messages_for(:password).each do |msg| %>
        <span class="text-pink-500"><%= msg %></span>
      <% end %>
    </div>
    <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "rounded p-2 bg-neutral-50 border-eggplant w-full text-eggplant" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <div class="flex gap-2 flex-wrap">
      <%= f.label :password_confirmation, class: "lowercase" %>
      <% f.object.errors.full_messages_for(:password_confirmation).each do |msg| %>
        <span class="text-pink-500"><%= msg %></span>
      <% end %>
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded p-2 bg-neutral-50 border-eggplant w-full text-eggplant" %>
  </div>

  <div class="field">
    <div class="flex gap-2 flex-wrap">
      <%= f.label :current_password, class: "lowercase" %> 
      <% f.object.errors.full_messages_for(:current_password).each do |msg| %>
        <span class="text-pink-500"><%= msg %></span>
      <% end %>
    </div>
    <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "rounded p-2 bg-neutral-50 border-eggplant w-full text-eggplant" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "cursor-pointer uppercase tracking-wider w-full bg-eggplant border-2 border-eggplant text-neutral-50 py-2 rounded hover:bg-neutral-50 hover:text-eggplant" %>
  </div>
<% end %>

<div class="flex gap-2">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), { data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "border-b-2 border-transparent hover:border-eggplant" } %></div>

<%= link_to "Back", :back, class: "uppercase tracking-wider" %>
