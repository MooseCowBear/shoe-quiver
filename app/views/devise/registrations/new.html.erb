<div class="flex flex-col gap-3">
  <h2 class="uppercase tracking-wider font-semibold">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-3 p-5 bg-neutral-50 rounded-md border-2 shadow-sm" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded p-2 bg-neutral-50 border-eggplant w-full text-eggplant" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded p-2 bg-neutral-50 border-eggplant w-full text-eggplant" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded p-2 bg-neutral-50 border-eggplant w-full text-eggplant" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "cursor-pointer uppercase tracking-wider w-full bg-eggplant border-2 border-eggplant text-neutral-50 py-2 rounded hover:bg-neutral-50 hover:text-eggplant" %>
    </div>
  <% end %>

  <div class="self-center text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
